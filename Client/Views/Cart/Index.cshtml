@model List<Shared.Models.Product>


@if(Model.Count > 0){
    <h2>Cart have @Model.Count item(s)</h2>
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Image</th>
            <th>Description</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Action</th>
            <th>Total Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>
                    <img src="@product.ProductImage" width="100" height="100" />
                </td>
                <td>@product.ProductDescription</td>
                <td>@product.ProductPrice</td>
                <td>@product.Quantity</td>
                <td>
                    <form method="post" asp-route-productId="@product.ProductID" asp-action="RemoveProduct" asp-controller="Cart">
                        <input type="hidden" name="productId" value="@product.ProductID" />
                        <button type="submit">Remove</button>
                    </form>
                </td>
                <td>@(@product.ProductPrice * @product.Quantity)</td>
            </tr>
        }
    </tbody>
</table>
}else{
    <h3>
        No item(s) in Cart
    </h3>
}