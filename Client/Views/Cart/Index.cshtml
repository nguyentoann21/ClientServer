@model List<Shared.Models.CartItem>

<div class="container">
    <h1>Shopping Cart</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Product.ProductName</td>
                    <td>@item.Product.ProductPrice.ToString("c")</td>
                    <td>@item.Quantity</td>
                    <td>@(item.Quantity * item.Product.ProductPrice).ToString("c")</td>
                    <td>
                        <form method="post" action="@Url.Action("RemoveFromCart", "Cart")">
                            <input type="hidden" name="productId" value="@item.Product.ProductID" />
                            <button type="submit" class="btn btn-danger">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3"></td>
                <td>Total:</td>
                <td>@Model.Sum(item => item.Quantity * item.Product.ProductPrice).ToString("c")</td>
            </tr>
        </tfoot>
    </table>
</div>
